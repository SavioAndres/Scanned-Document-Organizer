						<Label layoutX="14.0" layoutY="67.0" text="Pasta:" />
						<Label layoutX="14.0" layoutY="84.0" text="Imagem:" />
						<Hyperlink fx:id="folderName" layoutX="82.0" layoutY="64.0" onAction="#linkFolderName" text="..." />
						<Hyperlink fx:id="imageName" layoutX="82.0" layoutY="81.0" onAction="#linkImageName" text="..." />
