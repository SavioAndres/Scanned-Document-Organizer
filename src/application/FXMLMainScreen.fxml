								<ImageView fx:id="imageView" pickOnBounds="true" preserveRatio="true" />
							</content>
						</ScrollPane>
					</children>
				</AnchorPane>
				<AnchorPane>
					<children>
						<DatePicker fx:id="date" layoutX="14.0" layoutY="161.0" prefHeight="25.0" prefWidth="201.0" promptText="Data" />
